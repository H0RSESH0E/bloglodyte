<article class="post">
    <div class="title">
        <a href="{{url}}" target="_blank">{{title}}</a>
        <span>{{post_body}}</span>
    </div>
    <div class="meta">
        {{other}} point(s) by {{user.username}} on
        {{dateHelper created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
</article>