<section>
  <h1>Create a New Post:</h1>

  <form class="create-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text-box" id="post-title" name="post-title" />
      <br>
      <br>
      <textarea name="post-text"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>
<br>
<br>
{{#if posts.length}}
<h3>Past posts:</h3>
<br>
<ol class="post-list">
  {{#each posts as |hb_variableName|}}
  <li>
    {{> post-preview hb_variableName }}
    <button type="submit" class="edit-post-btn">Edit post</button>
    <br>
    <br>
  </li>
  {{/each}}
</ol>
{{else}}
<h4>When you have any active posts they will appear here.</h4>
{{/if}}
<script src="/assets/js/editPost.js"></script>
<script src="/assets/js/newPost.js"></script>